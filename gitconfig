[user]
  email = dmdque@gmail.com
  name = Daniel Que
[branch]
  autosetuprebase = always
[rerere]
  enabled = true
[color]
  ui = true
[core]
  excludesfile = ~/.gitignore
[alias]
  br = branch
  cm = commit
  cma = commit --amend
  co = checkout
  di = diff
  ignored = !git ls-files -v | grep "^[[:lower:]]"
  lg = log
  st = status
[credential]
  helper = cache --timeout=3600  ; 1 hour
[commit]
	gpgsign = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[merge]
	conflictstyle = diff3
